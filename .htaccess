<IfModule mod_rewrite.c>
    RewriteEngine On
    # Prevent access to sensitive files
    RewriteRule ^(\.env|composer\.json|composer\.lock|package\.json|package-lock\.json|phpunit\.xml|vite\.config\.js|tailwind\.config\.js)$ - [F,L]
    
    # Prevent access to sensitive directories
    RewriteRule ^(app|bootstrap|config|database|resources|routes|storage|tests|vendor)/.*$ - [F,L]
</IfModule>
